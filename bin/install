#!/usr/bin/env sh
PROYECT=kipdeals
echo "Starting docker"
docker-compose down
docker-compose up -d

echo "Prepare local code"
docker cp $PROYECT-nginx:var/www/html/ ./
git clone git@bitbucket.org:eterlabs/kipdeals.git
cp -rv ./kipdeals/. ./html/
rm -rf kipdeals/

bin/cleanfiles
echo "Execute project commands"
docker exec -ti $PROYECT-nginx bin/magento setup:upgrade
docker exec -ti $PROYECT-nginx bin/magento config:set dev/static/sign 0
docker exec -ti $PROYECT-nginx bin/magento config:set admin/captcha/enable 0
docker exec -ti $PROYECT-nginx bin/magento admin:user:create --admin-user="magento" --admin-password="admin123" --admin-email="admin@test.com" --admin-firstname="Admin" --admin-lastname="Admin"
docker exec -ti $PROYECT-nginx bin/magento setup:di:compile
docker exec -ti $PROYECT-nginx bin/magento deploy:mode:set developer
docker exec -ti $PROYECT-nginx rm -rf var/view_preprocessed/ pub/static/frontend/
docker exec -ti $PROYECT-nginx bin/magento setup:static-content:deploy es_MX -t Kipdeals/default -f
docker exec -ti $PROYECT-nginx bin/magento setup:static-content:deploy en_US -t Magento/backend -f
docker exec -ti $PROYECT-nginx bin/magento cache:flush
echo "changing permissions"
docker exec -ti kipdeals-nginx chmod -R 777 /var/www/html




